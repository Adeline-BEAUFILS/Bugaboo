{% extends 'base.html.twig' %}
{% block title %}{{ country.name }}{% endblock %}

{% block body %}

<div class="container-card">
        {% for killer in country.id %}
            <div class="card">
                <img style="height: 50vh;width : 100%; margin-top:7rem;" src="{{ killer.image }}" alt="Card image cap">
                <div class="card-body">
                    <h1 class="card-title">{{ killer.name }}</h1> <a class="more" href="{{ path('killer_show') }}">{{ 'Voir plus' | trans }}</a></br>
                </div>
            </div>
        {% else %}
            <tr>
                <td colspan="5">Aucun tueur pour ce pays</td>
            </tr>
        {% endfor %}
</div>

<a href="{{ path('country_index') }}">Retour Ã  la liste</a>

{% endblock %}